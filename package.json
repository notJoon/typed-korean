{
  "description": "Type-level Korean grammar validation using TypeScript's type system",
  "devDependencies": {
    "@types/node": "^25.2.3",
    "gaji": "^0.3.1",
    "prettier": "^3.8.1",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "3.2.4"
  },
  "license": "MIT",
  "name": "typed-korean",
  "scripts": {
    "codegen": "tsx scripts/gen-jamo-table.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "gha:build": "gaji build",
    "gha:dev": "gaji dev",
    "gha:watch": "gaji dev --watch",
    "test": "vitest --typecheck --passWithNoTests",
    "typecheck": "tsc --noEmit"
  },
  "type": "module",
  "version": "0.0.1"
}
